// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MediaType {
  video
  audio
}

enum DownloadQuality {
  fourk      @map("4k")
  oneK       @map("1080p")
  seventy    @map("720p")
  foureighty @map("480p")
  audio
}

enum DownloadStatus {
  pending
  downloading
  paused
  completed
  failed
  cancelled
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  media     Media[]
  playlists Playlist[]
  downloads Download[]

  @@map("users")
}

model Media {
  id        String    @id @default(cuid())
  title     String
  type      MediaType
  filename  String
  path      String
  size      Int
  duration  Int       @default(0)
  format    String
  thumbnail String?
  metadata  Json?
  subtitles Json?
  status    String    @default("ready") // processing, ready, error
  category  String? // movie, tv_show, music, etc.
  userId    String?   @map("user_id")
  user      User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  playlistItems PlaylistItem[]

  @@map("media")
}

model Playlist {
  id          String   @id @default(cuid())
  name        String
  description String?
  thumbnail   String?
  isPublic    Boolean  @default(false)
  userId      String?  @map("user_id")
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items PlaylistItem[]

  @@map("playlists")
}

model PlaylistItem {
  id         String   @id @default(cuid())
  mediaId    String
  playlistId String
  addedAt    DateTime @default(now())

  media    Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  @@unique([mediaId, playlistId])
  @@map("playlist_items")
}

model Download {
  id             String          @id @default(cuid())
  url            String
  title          String          @default("Untitled")
  type           MediaType       @default(video)
  quality        DownloadQuality @default(oneK)
  status         DownloadStatus  @default(pending)
  progress       Int             @default(0)
  size           Int             @default(0)
  downloadedSize Int             @default(0)
  filePath       String?
  mediaId        String?         @map("media_id")
  userId         String?         @map("user_id")
  user           User?           @relation(fields: [userId], references: [id], onDelete: SetNull)
  category       String?
  error          String?
  completedAt    DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@map("downloads")
}
